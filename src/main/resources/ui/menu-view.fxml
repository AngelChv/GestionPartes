<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>


<HBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gestionpartes.controller.MenuCtrl">
   <children>
      <Button fx:id="buttonCrearParte" alignment="CENTER" mnemonicParsing="false" onAction="#clickCrearParte" text="Crear Parte">
         <HBox.margin>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </HBox.margin>
      </Button>
      <Button fx:id="buttonListaPartes" alignment="CENTER" mnemonicParsing="false" onAction="#clickListaPartes" text="Lista de Partes">
         <HBox.margin>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </HBox.margin>
      </Button>
      <Button fx:id="buttonListaAlumnos" alignment="CENTER" mnemonicParsing="false" onAction="#clickListaAlumnos" text="Lista de Alumnos">
         <HBox.margin>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </HBox.margin>
      </Button>
      <Button fx:id="buttonCrearProfesor" alignment="CENTER" mnemonicParsing="false" onAction="#clickCrearProfesor" text="Crear Profesor">
         <HBox.margin>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </HBox.margin>
      </Button>
   </children>
</HBox>
