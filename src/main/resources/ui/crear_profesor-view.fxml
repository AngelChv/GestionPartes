<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>


<VBox alignment="TOP_CENTER" spacing="4.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gestionpartes.controller.CrearProfesorCtrl">
   <children>
       <fx:include source="menu-view.fxml" />
      <Label text="CREAR PROFESOR">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <Line endX="100.0" startX="-100.0" />
      <Label text="Nombre">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="txtNombre">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </TextField>
      <Label text="Número Asignado">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="txtNumAsig">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </TextField>
      <Label text="Contraseña">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <PasswordField fx:id="txtPassword">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </PasswordField>
      <Label text="Tipo">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <ComboBox fx:id="cbTipo" prefWidth="150.0">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </ComboBox>
      <Button fx:id="buttonCrear" mnemonicParsing="false" onAction="#clickCrear" text="Crear">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
   </children>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
</VBox>
